<com.abewy.android.apps.klyph.widget.CheckableGalleryLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.abewy.android.extended.widget.SquareImageView 
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    
    <ImageView 
        android:id="@+id/checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/galleryCheckmarkIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/gallery_checkmark_background"
        android:visibility="gone"/>

</com.abewy.android.apps.klyph.widget.CheckableGalleryLayout>